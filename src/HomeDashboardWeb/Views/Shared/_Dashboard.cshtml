<!doctype html>
<html lang="">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>@(ViewData["Title"] != null ? ViewData["Title"] + " - " : "")Home Dashboard</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/semantic/dist/semantic.css" />
        <link rel="stylesheet" href="~/css/dashboard.css" />
        <link rel="stylesheet" href="~/Assets/stylesheets/font-awesome.css" />
        <link rel="stylesheet" href="~/Assets/stylesheets/jquery.gridster.css" />
        <link rel="stylesheet" href="~/Assets/stylesheets/application.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://oss.maxcdn.com/semantic-ui/2.1.8/semantic.min.css"
              asp-fallback-href="~/lib/semantic/dist/semantic.min.css"
              asp-fallback-test-class="ui button" asp-fallback-test-property="cursor" asp-fallback-test-value="pointer" />
        <link rel="stylesheet" href="~/css/dashboard.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <!-- Following Menu -->
    <div class="ui large top pointing fixed menu">
        <div class="ui container">
            <a href="/" class="header item">Home Dashboard</a>
            <menulink class="blue item" asp-area="" controller-name="Home" action-name="Index" menu-text="Home"></menulink>
            <menulink class="blue item" asp-area="" controller-name="Home" action-name="About" menu-text="About"></menulink>
            <menulink class="blue item" asp-area="" controller-name="Home" action-name="Contact" menu-text="Contact">Contact</menulink>

        </div>
    </div>

    <!-- Page Contents -->
    <div class="pusher">
        <div class="ui container content">
            @RenderBody()
        </div>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/semantic/dist/semantic.js"></script>
        <script src="~/js/site.js"></script>
        <script src="~/Scripts/es5-shim.js"></script>
        <script src="~/Scripts/batman.js"></script>
        <script src="~/Scripts/batman.jquery.js"></script>
        <script src="~/Scripts/gridster/jquery.leanModal.min.js"></script>
        <script src="~/Scripts/jquery.knob.js"></script>
        <script src="~/Scripts/d3.v2.min.js"></script>
        <script src="~/Scripts/rickshaw.min.js"></script>
        <script src="~/Scripts/gridster/jquery.gridster.js"></script>
        <script src="~/Scripts/compiled-coffee.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.3.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://oss.maxcdn.com/semantic-ui/2.1.8/semantic.min.js"
                asp-fallback-src="~/lib/semantic/dist/semantic.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
